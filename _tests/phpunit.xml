<phpunit
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	processIsolation="true"
	stopOnError="false"
	stopOnFailure="false"
	stopOnIncomplete="false"
	stopOnSkipped="false"
	syntaxCheck="true"
	verbose="true"
	bootstrap="bootstrap.php">
	<logging>
		<log type="junit" target="../build/logs/phpunit.xml" />
<!--
		<log type="coverage-clover" target="../build/logs/coverage/clover.xml" />
		<log type="coverage-html" target="../build/logs/coverage/" charset="UTF-8" />
		<log type="testdox-text" target="../build/logs/testdox.txt" />
		<log type="testdox-html" target="../build/logs/testdox.html" />
-->
	</logging>
	<php>
		<includePath>.</includePath>
		<ini name="memory_limit" value="512M" />
		<ini name="error_log" value="../build/logs/error.log" />
	</php>
	<testsuites>
		<testsuite name="Identifier generator tests">
			<file>lib/FlatIdentifierGeneratorTest.php</file>
			<file>lib/MinIdentifierGeneratorTest.php</file>
		</testsuite>
		<testsuite name="Model tests">
			<file>lib/ModuleTest.php</file>
		</testsuite>
	</testsuites>
</phpunit>
